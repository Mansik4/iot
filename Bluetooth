#include <SoftwareSerial.h>
SoftwareSerial BT(10, 11); // RX, TX
void setup() {
  Serial.begin(9600);
  BT.begin(9600);
  Serial.println("Bluetooth Communication Started");
}

void loop() {
  if (BT.available()) {
    char data = BT.read();
    Serial.print("From Bluetooth: ");
    Serial.println(data);
    
    // Echo back to Bluetooth Device
    BT.print("Arduino Received: ");
    BT.println(data);
  }

  if (Serial.available()) {
    char data = Serial.read();
    BT.print("From Serial Monitor: ");
    BT.println(data);
  }
}
